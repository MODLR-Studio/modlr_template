root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
# Keep spaces in lists/code fences
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2

[*.py]
# Black uses 4-space indents; keep editor consistent
indent_size = 4

[Makefile]
indent_style = tab
